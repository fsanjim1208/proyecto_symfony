
{% extends "base2.html.twig" %}


    {% block stylesheets %}
        <link href="{{ asset('CSS/cssDisposicion.css') }}" type="text/css" rel="stylesheet" />        
    {% endblock %}

    
    {% block javascripts %}
        <script src="{{ asset('JS/funcionesMesa.js') }}" type="text/javascript"></script>
        <script src="{{ asset('JS/mesa.js') }}" type="text/javascript"></script>
        <script src="{{ asset('JS/mio2.js') }}" type="text/javascript"></script>
        <script src="{{ asset('JS/disposicion.js') }}" type="text/javascript"></script>
    {% endblock %}
    
    {% block body %}
    <div class="contenedor">
        <div class="sala"><p>Sala</p></div>

        
        <div class="almacen w-25">
            <div class="formu-disposicion m-1 d-flex">
                <div class="row g-6">
                    <div class="col-md-13">

                        <div class="form-floating w-100">
                            <form id="checkbox">
                                <div class="form-check form-check-inline ms-4">
                                    <input class="form-check-input" type="radio" name="disposicion" id="base" value="Base" checked>
                                    <label class="form-check-label" for="inlineRadio1">Base</label>
                                </div>
                                <div class="form-check form-check-inline ms-4 ">
                                    <input class="form-check-input" type="radio" name="disposicion" id="personalizada" value="Personalizada">
                                    <label class="form-check-label" for="inlineRadio2">Personalizada</label>
                                </div>
                            </form>
                        </div>
                        <div class="form-floating w-100">
                            <input type="text" id="fecha" class="form-control w-100 m-2" placeholder="Fecha">
                            <label for="fecha">Fecha</label>
                        </div>
                    
                        <div class="row w-100">
                            <div class="form-floating col">
                                <button class="btn btn-primary py-1 m-2" type="submit" id="creaMesa">Crear Mesa Nueva</button>
                            </div>
                            <div class="form-floating col">
                                <button class="btn btn-primary  py-1 m-2" type="submit" id="GuardaDistribuicion">Almacena la disposicion</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
            <p>Almacen</p> 
            
        </div>
    </div>
    {% endblock %}
